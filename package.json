{
  "name": "railgun-media-encoder",
  "version": "1.0.0",
  "author": "EdgeNeko - Sakura Trak Studio",
  "homepage": "https://sakuratrak.tk/railgun",
  "scripts": {
    "build": "tsc -p core && ng build --base-href ./",
    "build-prod": "tsc -p core && ng build --prod --base-href ./ --output-hashing none",
    "start": "npm run build && electron ./dist/app/index.js",
    "clean": "rm ./dist -rf",
    "publish": "cp package.release.json dist/app/package.json && electron-builder",
    "lint": "ng lint --type-check && tsc -p ui && echo Linting Core... && tslint -p core"
  },
  "private": true,
  "build": {
    "appId": "net.sakuratrak.RailgunMediaEncoder",
    "productName": "Railgun Media Encoder",
    "directories": {
      "app": "dist/app",
      "output": "dist/pack",
      "buildResources": "res"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "license": "LICENSE",
      "artifactName": "${productName}.Setup.${version}.${ext}"
    },
    "win": {
      "target": [
        {
          "target": "nsis"
        },
        {
          "target": "zip"
        }
      ]
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": [
        {
          "target": "deb"
        },
        {
          "target": "rpm"
        },
        {
          "target": "tar.gz"
        }
      ]
    }
  },
  "dependencies": {
    "@angular/animations": "^8.2.11",
    "@angular/cdk": "^8.2.3",
    "@angular/common": "~8.2.11",
    "@angular/compiler": "~8.2.11",
    "@angular/core": "~8.2.11",
    "@angular/forms": "~8.2.11",
    "@angular/material": "^8.2.3",
    "@angular/platform-browser": "~8.2.11",
    "@angular/platform-browser-dynamic": "~8.2.11",
    "@angular/router": "~8.2.11",
    "core-js": "^3.6.5",
    "material-design-icons": "^3.0.1",
    "ngx-electron": "^2.2.0",
    "rxjs": "~6.5.5",
    "sweetalert2": "^9.10.10",
    "tslib": "^1.11.1",
    "zone.js": "~0.10.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.803.12",
    "@angular/cli": "~8.3.12",
    "@angular/compiler-cli": "~8.2.11",
    "@angular/language-service": "~8.2.11",
    "@types/electron": "^1.6.10",
    "@types/jasmine": "~3.5.10",
    "@types/jasminewd2": "~2.0.8",
    "@types/node": "~12.11.1",
    "asar": "^3.0.3",
    "codelyzer": "~5.2.2",
    "concurrently": "^5.1.0",
    "electron": "8.2.1",
    "electron-builder": "^22.4.1",
    "jasmine-core": "~3.5.0",
    "jasmine-spec-reporter": "~5.0.1",
    "karma": "~5.0.1",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~2.1.1",
    "karma-jasmine": "~3.1.1",
    "karma-jasmine-html-reporter": "^1.5.3",
    "protractor": "~5.4.3",
    "ts-node": "~8.8.2",
    "tslint": "~6.1.1",
    "typescript": "~3.8.3",
    "node": "^12.16.2"
  }
}
